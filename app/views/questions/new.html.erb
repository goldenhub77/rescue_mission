<h1>Submit a question</h1>
<% if !@errors.nil? %>
  <div class="errors">
    <p><%= @errors.join(", ") %></p>
  </div>
<% end %>
<%= form_for(@question) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, size: "60x10" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit Question" %>
  </div>
<% end %>
